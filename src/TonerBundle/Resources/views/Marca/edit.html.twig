
{% extends "TonerBundle:Default:admin.html.twig" %}                      
{% block marcas %} {% endblock %}
{% block body -%}
     {{ parent() }}
   <div class="container">
       <br>
       
       <div class="row well">           
        <div class="col-md-12">
            <div class="page-header">
                <h1>Editar  Marca</h1>
            </div>
            
            {{ form_start(edit_form ,{ 'attr' : {'role' : 'form'}}) }}
            <div class="form-group">
                {{ form_label(edit_form.nombre) }}
                {{ form_widget(edit_form.nombre  , {'attr' : {'class' : 'form-control'}  }) }}
            </div>
       
            <div class="form-group">
                {{ form_label(edit_form.imagen) }}
                {{ form_widget(edit_form.imagen  , {'attr' : {'class' : 'form-control' } }) }}
            </div>
            
            <p>
                {{ form_widget(edit_form.save, { 'label' : 'Guardar cambios' , 'attr' : { 'class' : 'btn btn-info' } }) }}
            </p>
            
            {{ form_end(edit_form) }}
            
        <a class="btn btn-large btn-success" href="{{ path('marca') }}">
            Volver a la lista
        </a>
            
        <div class="col-lg-12">
            {{ form_start(delete_form) }}
            <br>
                 <p>
                {{ form_widget(delete_form.eliminar, { 'label' : 'Eliminar' , 'attr' : { 'class' : 'btn btn-danger btn-large' } }) }}
                 </p>
            {{ form_end(delete_form) }}
        </div>
        </div>
      </div>
    </div>
         
{% endblock %}

   

        
