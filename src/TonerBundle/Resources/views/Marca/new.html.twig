
{% extends "TonerBundle:Default:admin.html.twig" %}                      
{% block marcas %} {% endblock %}
{% block body -%}
     {{ parent() }}
   <div class="container">
       <br>
       
       <div class="row well">           
        <div class="col-md-12">
            <div class="page-header">
                <h1>Agregar nueva Marca</h1>
            </div>
            
            {{ form_start(form ,{ 'attr' : {'role' : 'form'}}) }}
            <div class="form-group">
                {{ form_label(form.nombre) }}
                {{ form_widget(form.nombre  , {'attr' : {'class' : 'form-control' , 'placeholder' : 'nombre'} }) }}
            </div>
       
            <div class="form-group">
                {{ form_label(form.imagen) }}
                {{ form_widget(form.imagen  , {'attr' : {'class' : 'form-control' , 'placeholder' : 'URL de la imagen'} }) }}
            </div>
            
            <p>
                {{ form_widget(form.save, { 'label' : 'Crear marca' , 'attr' : { 'class' : 'btn btn-info' } }) }}
            </p>
            
            {{ form_end(form) }}
            
        <a class="btn btn-large btn-success" href="{{ path('marca') }}">
            Volver a la lista
        </a>
    
        </div>
      </div>
    </div>
         
{% endblock %}
