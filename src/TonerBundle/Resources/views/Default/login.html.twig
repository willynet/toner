{% extends "TonerBundle:Default:categoria.html.twig" %}                      
{% block marcas %} {% endblock %}
{% block body %}
<section id="content">
<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form action="{{ path('user_login_check') }}" method="post" role="form" class="">
			<h2>Login <small>Gestionar productos</small></h2>
			<hr class="colorgraph">
                            
                         {% if error %}
                             <div class="text-danger">
                                 <p>
                                     <strong>{{ error.messageKey }}</strong>
                                 </p>
                             </div>
                         {% endif %}    
                        
			<div class="form-group">
				<input type="email" name="_correo" value="{{ last_username }}" id="email" class="form-control input-lg" placeholder="Email" tabindex="4">
			</div>
			<div class="form-group">
				<input type="password" name="_password" class="form-control input-lg"  placeholder="Password">
			</div>

			<hr class="colorgraph">
			<div class="row">
                            <input type="hidden" name="_target_path" value="user_homepage" />
				<div class="col-xs-12 col-md-6"><input type="submit" value="Ingresar" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
				
			</div>
		</form>
	</div>
</div>

</div>
	</section>
     

            
{% endblock %}                     
	
        
       
